{
  "compilerOptions": {
    "module": "CommonJS",             
    "target": "ES2017",               
    "outDir": "./dist",              
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
